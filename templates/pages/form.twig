{% extends 'index.twig' %}

{% block content %}
    <div class="container">
        <div class="row form-header">
            <div class="col-lg-12 text-center h1Container">
                <h1>Facebook Cybersecurity</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3">
                <div id="panel" class="panel panel-default">
                    <div class="panel-heading">
                        What content do you want hash?
                    </div>
                    <div class="panel-body">
                        <div class="container-fluid">
                            <div class="form-group has-feedback">
                                <label class="control-label" for="link">Facebook post link</label>
                                <div class="input-group">
                                    <span class="input-group-btn">
                                        <button id="check" class="btn btn-default" type="button">Hash!</button>
                                    </span>
                                    <input id="link" type="text" class="form-control"
                                           placeholder="Facebook post link" required>
                                    <span id="linkIcon" class="glyphicon form-control-feedback"></span>
                                </div>
                            </div>
                            <div id="tips">
                                <h5>The link must be as the following examples:</h5>
                                <ul>
                                    <li>https://www.facebook.com/xxxx/posts/0000000000</li>
                                    <li>https://www.facebook.com/xxxx/videos/0000000000</li>
                                    <li>https://www.facebook.com/xxxx/photos/a.0000.0000/00000</li>
                                    <li>https://www.facebook.com/permalink.php?story_fbid=0000&id=0000</li>
                                </ul>
                            </div>
                            <div id="progress">
                                <h5>Progress..</h5>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100">
                                        <span class="sr-only">60% Complete</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content %}